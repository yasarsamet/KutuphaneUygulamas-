@model KütüphaneUygulaması.ViewModel.NewPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Şifremi Yenileme</title>    
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">    
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Parola Sıfırlama ?</h1>
                                        <p class="mb-4">Aşağıya e-posta adresinizi gelen kodu yazınız !</p>
                                    </div>
                                    @using (Html.BeginForm("SifreResetleme", "Ogrenci", FormMethod.Post))
                                    {
                                <div class="col-sm-9">
                                    <input type="text" placeholder="Kodu Buraya Yazınız" id="gelencod" name="codem" class="form-control" } />
                                    <br>
                                    @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", @id = "password", placeholder = "Yeni Şifrenizi Yazınız" })
                                    @Html.ValidationMessageFor(m => m.Sifre, "", new { @style = "color:red" })
                                    @*<input name="password" id="password" type="password" />*@
                                    <br>                                   
                                    <input class="form-control" type="password" name="confirm_password" id="confirm_password" />

                                    <span id='message'></span>
                                </div>
                                        <button type="submit" id="sifrereset" class="btn btn-primary btn-user btn-block" style="margin-top:5px;">Onayla</button>
                                    }
                                    <hr>                                    
                                </div>
                              </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#password, #confirm_password').on('keyup', function () {
            $("#sifrereset").prop('disabled', true); //Pasif Hale Getirir.
            var password1 = $('#password').val();
            var password2 = $('#confirm_password').val();
            if ($('#password').val() == $('#confirm_password').val()) {
                $('#message').html('Şifreler Aynı').css('color', 'green');
                $("#sifrereset").removeAttr('disabled'); //Aktif Hale Getirir.
        }else {
            $('#message').html('Şifreler Aynı Değil').css('color', 'red');
            }
        });
    </script>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
</body>

</html>